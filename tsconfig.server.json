{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist-server",
        "rootDir": "./",
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "server/**/*",
        "types.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client"
    ] // Assuming client code is excluded from server build
}